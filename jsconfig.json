{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "resources/js/**/*.js",
    "vite.config.js",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public",
    "public/build"
  ]
}